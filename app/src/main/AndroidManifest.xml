<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.infinitedev.shifu.whatthefood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.infinitedev.shifu.whatthefood.introSlider.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Food"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Drink"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Dessert"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DetailMenus"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".About"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Checkout"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CheckoutDone"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>