<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:paddingTop="40dp">

    <ImageView
        android:id="@+id/thanks_title"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:adjustViewBounds="true"
        android:src="@drawable/wtf_thanks" />

    <TextView
        android:id="@+id/thanks_desc"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanks_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="casual"
        android:text="Thank You for ordering through What The Food App, Hope you enjoy it."
        android:textAlignment="center"
        android:textColor="#E0E0E0"
        android:textSize="8pt"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_balik"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thanks_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="#e5e5e5"
        android:elevation="5dp"
        android:text="ORDER AGAIN"
        android:textColor="@color/colorPrimaryLight" />

</RelativeLayout>